.navbar
  position relative
  padding-top 3rem
  text-align center
  .nav
    list-unstyled()
    .nav-item-link
      display block
      padding 1rem;
      color sea-dark
      text-decoration none
      cursor pointer
      &:hover
        color link-hover-color
    &.nav-main
      .nav-item-link
        &::before, i.fe
          display block
          line-height 1
        &::before
          font-family 'feathericon'
      .nav-item
        &:nth-child(1)         // 首页
          .nav-item-link
            &::before
              content '\f12f'
        &:nth-child(2)         // 归档
          .nav-item-link
            &::before
              content '\f12a'
        &:nth-child(3)         // 相册
          .nav-item-link
            &::before
              content '\f1a9'
         &:nth-child(4)         // 收藏
           .nav-item-link
             &::before
               content '\f11e'
